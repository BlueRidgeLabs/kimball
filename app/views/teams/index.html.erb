<%= render partial: 'layouts/admin_menu' %>
<h1>Teams</h1>

<div class="row">
  <div class="col-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="1">name</th>
          <th colspan="1">size</th>
          <th colspan="1">finance code</th>
          <th colspan="1">Amount YTD</th>
          <th colspan="1">Digital Budget</th>
          <th colspan="3">actions</th>
        </tr>
      </thead>
      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= link_to team.name, team %></td>
            <td><%= team.users.size %></td>
            <td><%= best_in_place team, :finance_code,
                      as: :select,
                      collection: Team.finance_code_hash %></td>
            <td><%= humanized_money_with_symbol team.rewards_total %></td>
            <td><%= humanized_money_with_symbol team.budget.amount %></td>
            <td><%= link_to 'Show', team, class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_team_path(team), class: 'btn btn-secondary' %>
            <%= link_to 'Destroy', team, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<%= link_to 'New Team', new_team_path, class: 'btn btn-primary' %>
