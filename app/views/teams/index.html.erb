<%= render partial: 'layouts/admin_menu' %>
<h1>Teams</h1>

<div class="row">
  <div class="span12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="1">name</th>
          <th colspan="1">size</th>
          <th colspan="3">actions</th>
        </tr>
      </thead>
      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= link_to team.name, team %></td>
            <td><%= team.users.size %></td>
            <td><%= link_to 'Show', team, class: 'btn' %>
            <%= link_to 'Edit', edit_team_path(team), class: 'btn' %>
            <%= link_to 'Destroy', team, class: 'btn btn-warn', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


