<div id='sessions_tags'>
<table>
  <tr>
    <th>Count</th>
    <th>Tag</th>
  </tr>

  <% person.research_sessions.tag_counts.limit(10).each do |tag| %>

    <tr class='tag' id='tag-<%=tag.id%>'>
      <a href='<%= research_sessions_path(q:{ransack_tagged_with: tag.name}) %>'>
        <td><span class='badge badge-dark'><%=tag.taggings_count%></span></td>
        <td><%= tag.name %></td>
      </a>
    </tr>
  <% end %>
</table>
</div>

<div id='recent-sessions'>
  <div id='future-sessions'>
    <h4>Future Sessions</h4>
    <table class='table table-striped'>
      <tr>
        <th>title</th>
        <th>date</th>
        <th>user</th>
      </tr>
    <% person.research_sessions.future.limit(5).each do |session| %>
      <tr>
        <td>
          <%= link_to session.title, session %>
        </td>
        <td>
          <%= session.start_datetime.to_s :short %>
        </td>
        <td>
          <%= session.user.name %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
  <div id='today-sessions'>
    <h4>Today Sessions</h4>
