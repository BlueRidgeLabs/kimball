    <% end %>
    </table>
  </div>
  <div id='past-sessions'>
    <h4>Past Sessions</h4>
    <table class='table table-striped'>
      <tr>
        <th>title</th>
        <th>date</th>
        <th>user</th>
      </tr>
    <% person.research_sessions.past.limit(5).each do |session| %>
       <tr>
        <td>
