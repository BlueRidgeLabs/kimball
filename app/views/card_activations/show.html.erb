<h2>Card Activation</h2>
<h4>Created By: <%= User.find(@card_activation.created_by).name %></h4>
<table class="table">
  <thead>
    <tr>
      <th colspan="1">Last 4</th>
      <th colspan="1">Batch</th>
      <th colspan="1">Sequence</th>
      <th colspan="1">Amount</th>
      <th colspan="1">Status</th>
      <th colspan="1">Re-Run Check</th>
      <% if current_user.admin? %>
      <th colspan='1'>User</th>
      <th colspan='3'>Admin</th>
      <% end %>
    </tr>
  </thead>
  <tbody> 
    <%= render partial: "single_card_activation",
                   locals: {card_activation: @card_activation} %>
  </tbody>
</table>
<h3>Calls</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>type</th>
      <th>status</th>
      <th>twilio status</th>
      <th>created</th>
      <th>updated</th>
      <th colspan='3'>transcript</th>
    </tr>
  </thead>
  <tbody>
    <% @card_activation.calls.each do |call| %>
    <tr>
      <td><%= call.id %></td>
      <td><%= call.call_type %></td>
      <td><%= call.call_status %></td>
      <td><%= call.call&.status %></td>
      <td><%= call.created_at.to_s :short %></td>
      <td><%= call.updated_at.to_s :short %></td>
      <td colspan='3'><%= call.transcript.to_s %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Edit', edit_card_activation_path(@card_activation) %> |
<%= link_to 'Back', card_activations_path %>
