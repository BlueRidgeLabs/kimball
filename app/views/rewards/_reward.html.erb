<tr class="reward" id="reward-<%= reward.id %>">
	<td><%= reward.id %></td>
	<td><%= reward.person_id %></td>
	<td><%= reward.person.full_name %></td>
  <td><%= reward.reason.titleize %></td>
  <td><%= link_to(reward.rewardable.class, url_for(reward.rewardable))%></td>
  <td><%= link_to(find_name(reward.giftable), url_for(reward.giftable))%></td>
  <td><%= humanized_money_with_symbol reward.amount %></td>
  <td><%= reward.created_at.strftime('%m/%d/%Y') %></td>
  <td><%= link_to 'Show', reward %></td>
  <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
  <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
