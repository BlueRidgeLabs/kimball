<% @deleted.each do |delete| %>
  $('#<%= delete %>-cart-delete').removeClass('d-inline').addClass('d-none');
  $('#<%= delete %>-cart-add').removeClass('d-none').addClass('d-inline');
  $('#cart-<%= delete %>').remove();
<% end %>

<% if @deleted_all %>
  $('#full-cart').html('<%= j render partial: 'cart/full_item', collection: current_cart.people, as: :person %>');
  $('#best_in_place_cart_2_rapidpro_sync').html('No'); // no longer synced.
<% end %>

if(typeof research_session_id !== "undefined")
{
  Turbolinks.reload(); // horrible hack
}

$('.cart-size').html('<%= @cart.people_ids.size %>');
