<%= form_for @event_invitation, url: v2_event_invitations_path, html: { class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :email_addresses, "People's email addresses", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :email_addresses, :class => 'text_area' %>
      <p>* comma separated</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, 'Event description', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :slot_length, 'Call length', :class => 'control-label' %>
    <div class="controls">
      <%= f.select :slot_length, options_for_select([15,30,45,60].map {|o| "#{o.to_s} mins"}), :class => 'text_field' %>
    </div>
  </div>

  <h2>Time windows</h2>

  <%= f.fields_for :time_windows do |time_window_fields| %>
  <div id="time_window_<%= time_window_fields.index %>">
    <div class="control-group">
      <%= time_window_fields.label :date, :class => 'control-label' %>
      <div class="controls">
        <%= time_window_fields.text_field :date, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= time_window_fields.label :start_time, :class => 'control-label' %>
      <div class="controls">
        <%= time_window_fields.select :start_time, simple_time_select_options, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= time_window_fields.label :end_time, :class => 'control-label' %>
      <div class="controls">
        <%= time_window_fields.select :end_time, simple_time_select_options, :class => 'text_field' %>
      </div>
    </div>
  </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit 'Send invitation', :class => 'btn btn-primary', :id => 'submit' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                people_path, :class => 'btn' %>
  </div>
<% end %>
