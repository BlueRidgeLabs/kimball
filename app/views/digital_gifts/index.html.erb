<%= render :partial => 'layouts/reward_menu' %>
<p id="notice"><%= notice %></p>

<h1>Digital Gifts</h1>
<div class="row">
  <div class="span12">
<%= will_paginate @digital_gifts, :renderer => BootstrapPagination::Rails %>
  </div>
</div>
<div class="row">
  <div class="span12">
    <table>
      <thead>
        <tr>
          <th colspan="1">Order ID</th>
          <th colspan="1">Amount</th>
          <th colspan="1">Status</th>
          <th colspan="1">Campaign Title</th>
          <th colspan="1">Reward</th>
          <th colspan="1">Link</th>
          <% if current_user.admin? %>
          <th colspan="3">Admin</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'single_digital_gift', collection: @digital_gifts %>
      </tbody>
    </table>
</div>
</div>
