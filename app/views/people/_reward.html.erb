<tr class="gift_card" id="reward-<%= reward.id %>">
    <td><%= (reward.reason.titleize) || "" %></td>
    <td><%= link_to(reward.giftable.title, reward.giftable) %></td>
    <td><%= link_to(reward.rewardable.class, reward.rewardable) %></td>
    <td><%= humanized_money_with_symbol reward.amount %></td>
    <td><%= reward.created_at.strftime('%m/%d/%Y') %></td>
    <% if current_user.admin? %>
    <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
    <td><%= link_to 'Unassign', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
</tr>
