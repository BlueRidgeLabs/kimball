<%= render partial: 'layouts/admin_menu' %>
<h1>Map</h1>
<style>
#bigmap{
  width:100%;
  height:600px;
}
</style>
<div class="row">
  <div class="span12">
    <div id='bigmap'></div>
     <script>

      function getColor(d) {
          return d > <%= @max %> ? '#800026' :
                 d > <%= @max - @max * 0.8 %>  ? '#BD0026' :
                 d > <%= @max - @max * 0.6 %>  ? '#E31A1C' :
                 d > <%= @max - @max * 0.4 %>  ? '#FC4E2A' :
                 d > <%= @max - @max * 0.2 %>   ? '#FD8D3C' :
                 d > <%= @max - @max * 0.1 %>   ? '#FEB24C' :
                 d > 2   ? '#FED976' :
                            '#FFEDA0';
      }

      function getSize(d){
         return  d >= <%= @max %> ? 700 :
                 d > <%= @max - @max * 0.8 %>  ? 600 :
                 d > <%= @max - @max * 0.6 %>  ? 500 :
                 d > <%= @max - @max * 0.4 %>  ? 400 :
                 d > <%= @max - @max * 0.2 %>  ? 300 :
                 d > <%= @max - @max * 0.1 %>  ? 200 :
                 d > 2   ? 100 :
                           50 ;
      }
      var mymap = L.map('bigmap').setView([40.650002, -73.949997], 10);

      L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token={accessToken}', {
        attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',
        maxZoom: 14,
        id: 'mapbox.streets',
        accessToken: '<%= ENV['MAPBOX_TOKEN'] %>'
      }).addTo(mymap);
      <% @zips.each do |zip_arr| %>
        <% zip  =  zip_arr[0]
          count = zip_arr[1] 
          lat_long = ZIP_LAT_LONG[zip]
          unless lat_long.nil?%>
          var circle = L.circle([<%= lat_long[:lat].to_f %>, <%= lat_long[:long].to_f %>], {
            color: 'grey',
            fillColor: getColor(<%=count%>),
            fillOpacity: 0.5,
            radius: getSize(<%=count%>)
          }).addTo(mymap);
            circle.bindPopup("zip: <%=zip%> </br>count: <%= count %></br> <a href='/search/index_ransack?utf8=✓&q%5Bpostal_code_cont%5D=<%=zip%>'> search in area").openPopup();
            
            <% end %>
      <% end %>
    </script>
  </div>
</div>
