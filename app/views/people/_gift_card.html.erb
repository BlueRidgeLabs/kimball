<tr class="gift_card" id="gift_card-<%= gift_card.id %>">
    <td><%= (gift_card.reason.titleize) || "" %></td>
    <td><%= link_to(gift_card.giftable.title, gift_card.giftable) if gift_card.giftable.present? %></td>
    <td><%= gift_card.sequence_number %></td>
    <td><%= gift_card.batch_id %></td>
    <td><%= gift_card.gift_card_number %></td>
    <td><%= gift_card.expiration_date %></td>
    <td><%= humanized_money_with_symbol gift_card.amount %></td>
    <td><%= gift_card.created_at.strftime('%m/%d/%Y') %></td>
    <% if current_user.admin? %>
    <td><%= link_to 'Edit', edit_gift_card_path(gift_card) %></td>
    <% remove_text = gift_card.card_activation.present? ? 'Unassign' : 'Destroy' %>
    <td><%= link_to remove_text, gift_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
</tr>
