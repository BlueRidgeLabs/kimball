
<%= form_for @person, url: public_people_path do |f| %>
  <div class="control-group">
    <%= f.label :first_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :first_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :last_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :last_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email_address, :class => 'text_field contact',:validate => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone_number, :class => 'text_field contact',:validate => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :preferred_contact_method, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :preferred_contact_method, [["Email", "EMAIL"],["Text Message", "SMS"]], :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
  <label class="control-label" for="person_age_range">Age:</label>
    <%= select_tag :age_range, options_for_select([
                              ['How old are you?',''],
                              ["10-17", "10-17"],
                              ["18-25", "18-25"],
                              ["26-40", "26-40"],
                              ["41-60", "41-60"],
                              ["61+", "61+"]]),
                              class: 'text_field',
                              id: 'age_range',
                              selected: 'How old are you?' %>
  </div>
  <div class="control-group">
    <%= f.label :postal_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :postal_code, :class => 'text_field', :validate => true %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="low_income">Do you consider yourself low-income?</label>
    <div class="controls">
      <label class="toggle-check">
        <input type="checkbox" name="person[low_income]" id="person_low_income" class="toggle-check-input" />
        <span class="toggle-check-text"></span>
      </label>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Save', :class => 'btn btn-primary' %>
  </div>
  <div class="control-group">
    <div class='controls'>&nbsp;</div>
  </div>
<% end %>
<div id='public-person-form'></div>
