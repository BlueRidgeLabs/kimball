<style>
.tag{margin:1em; padding:1em;}
.css1 { font-size: 1.0em;}
.css2 { font-size: 1.2em;}
.css3 { font-size: 1.4em;}
.css4 { font-size: 1.6em;}
</style>
<div class='tag-cloud'>
<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <span class='tag'>
  <%= link_to tag.name, people_path(tags: tag.name), class: css_class %><span class='badge'><%= tag.taggings_count %></span>
  </span>
<% end %>
</div>
