<%= form_tag(taggings_path(), remote: true, class: "form-inline tag-form form-group" ) do |form| %>
  <%= hidden_field_tag :taggable_type, taggable_obj.class %>
  <%= hidden_field_tag :taggable_id, taggable_obj.id %>
  <%= text_field_tag :tag, "", id: 'tag-typeahead', class: "input tag-typehead form-control", autocomplete: 'off' %>
  <%= submit_tag "Add", class: "btn btn-primary mt-2" %>
<% end %>

