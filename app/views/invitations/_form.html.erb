<%= form_for @invitation, url: invitations_path, html: { class: 'form-horizontal' } do |form| %>
  <%= form.hidden_field :person_id, value: @person.id.to_s %>
  <%= form.hidden_field :user_id, value: @user.id.to_s %>
  <%= form.hidden_field :research_session_id, value: @research_session.id %>

  <%= form.submit "Confirm reservation" %>

<% end %>
