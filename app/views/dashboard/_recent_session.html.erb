<div class="recent_session well">
  <span class="session">Title:<%= link_to session.title, session %></span><br/>
  <span class="user">User: <%= session.user.name %></span><br/>
  <span class="start">Start:<%= session.start_datetime.to_s :short %></span><br/>
  <span class="invitations">People:<%= session.invitations.size %></span><br/>
  <span class="gift-cards">gift cards:<%= session.gift_cards.size %></span><br/>
  <span class='tags'>Tags:<%=session.tag_list.to_s%></span><br/>
</div>
