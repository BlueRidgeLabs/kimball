<div class="deactivated-person well">
  <span class="name"><%= link_to "#{person.first_name} #{person.last_name}", person %></span><br/>
  <span class="deactivated-at">Time:<%= person.deactivated_at.to_s :short %></span><br/>
  <span class="deactivated-method">Method:<%= person.deactivated_method %></span><br/>
  <% if person.versions&.last&.whodunnit.present? %>
    <% user = User.find person.versions.last.whodunnit.split('/').last %>
  <span class="deactivated-by">by:<%= user.name %></span><br/>
  <% end %>
  <span class="rewards">Gift Cards: <%= person.rewards.size %></span><br/>
  <span class="last-user">Last User Interaction: <%= person.research_sessions.last&.user&.name %></span>
</div>
