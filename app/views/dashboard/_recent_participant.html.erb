<div class="recent-participant card card-body bg-light m-2">
  <%
    recent =  person.research_sessions.where('start_datetime < ?', Time.current).last 
     invite = recent.invitations.find_by(person_id: person.id)
     %>
  <span class="name">
    <%= link_to "#{person.first_name} #{person.last_name}", person %>
  </span>
  <br/>
  <span class="session">
    Session:<%= link_to recent.title, recent %>
  </span>
  <br/>
  <span class="gift-cards">
    Rewards: <%= invite.rewards.size %>
  </span>
  <br/>
  <span class="session-user">
    User: <%= recent.user.name %>
  </span>
  <br/> 
</div>
