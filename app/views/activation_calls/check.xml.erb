<?xml version="1.0" encoding="UTF-8"?>
<Response>
    <Pause length="27"/>
    <Play digits="<%= @card_activation.full_card_number %>#"></Play>
    <Pause length="9"/>
    <Play digits="<%= @card_activation.secure_code %>#"></Play>
    <Pause length="4"/>
    <Play digits="<%= @card_activation.expiration_date %>#"></Play>
    <% #"Your pin has been created your card has been activated" 
    #<Gather hint="please hold while we access your account as of 
    # Date.current.to_s :long 
    # the available balance on this account is dollars and cents." 
    %>
    <Record timeout="3" 
            maxLength="20" 
            trim="trim-silence" 
            transcribe="true"
            action="<%=activation_call_update(@activation_call)%>"/>
    <Hangup/>
</Response>


