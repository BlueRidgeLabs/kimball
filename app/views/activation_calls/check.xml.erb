<?xml version="1.0" encoding="UTF-8"?>
<Response>
    <Pause length="27"/>
    <Play digits="<%= @card_activation.full_card_number %>#"></Play>
    <Pause length="9"/>
    <Play digits="<%= @card_activation.secure_code %>#"></Play>
    <Pause length="4"/>
    <Play digits="<%= @card_activation.expiration_date.gsub("/","") %>#"></Play>
    <% 
    # please hold while we access your account as of 
    # Date.current.to_s :long 
    # the available balance on this account is dollars and cents. 
    %>
    <Gather input="speech" 
            hints="please hold while we access your account" 
            action="<%= callback_activation_calls_url(@activation_call.token) %>" />
    <Hangup/>
</Response>


