<?xml version="1.0" encoding="UTF-8"?>
<Response>
    <Pause length="27"/>
    <!-- card number -->
    <Play digits="<%= @card_number %>#"></Play>
    <Pause length="18"/>
    <Play digits="1234#"></Play>
    <Pause length="18"/>
    <Play digits="1234#"></Play>
    <Pause length="10"/>
    <!-- security code -->
    <Play digits="<%= @secure_code %>#"></Play>
    <Record timeout="5" maxLength="15" trim="trim-silence" transcribe="true"/>
    <Hangup/>
</Response>
